[user]
  name = Luke Zappia
  email = EMAIL

[core]
  autocrlf = input
  compression = 9
  excludesfile = ~/.gitignore_global
  filemode = false

[apply]

[alias]
  # Complex aliases from http://michaelwales.com/articles/make-gitconfig-work-for-you/

  # Show all aliases
  aliases = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\ \t => \\2/' | sort
  # Amend commit
  amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
  # Unstage changes
  unstage = reset HEAD --
  # Pretty log with tree
  graph = !git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative

[branch "master"]

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = red

[diff]

[help]
  autocorrect = 20

[merge]
  log = true
  ff = false
  tool = vimdiff

[pull]

[push]
  default = simple

[rerere]
  enabled = 1

[url "https://"]
  insteadOf = "git://"
